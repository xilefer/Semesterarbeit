<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeMediaApp.Pages.FileExplorerPage"
             Title="Dateiexplorer" BackgroundColor="White">
    <ListView x:Name="FileListView" ItemsSource="{Binding ExplorerItems}" BackgroundColor="White" ItemTapped="FileListView_OnItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell Text="{Binding DisplayName}" ImageSource="{Binding IconSource}" TextColor="Black"></ImageCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>