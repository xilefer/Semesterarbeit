<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Video-Player" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HomeMediaApp.Droid.Pages.VideoViewControl"
             xmlns:views="clr-namespace:HomeMediaApp.Droid.Views;assembly=HomeMediaApp.Droid">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <views:VideoContentView x:Name="VideoContentViewControl" VerticalOptions="Fill" HorizontalOptions="Fill">
            
        </views:VideoContentView>
        <StackLayout x:Name="StackLayoutVideoControl" Orientation="Vertical" Grid.Row="1" VerticalOptions="Fill" HorizontalOptions="Fill" BackgroundColor="Orange">
             <Button x:Name="PlayPauseButton" Clicked="PlayPauseButton_OnClicked" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" Text="Play / Pause"/>
        </StackLayout>
    </Grid>

</ContentPage>
